{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "didact": ["didact/index.ts"]
    },
    "target": "ESNext",                                 
    "module": "ESNext",
    "moduleResolution": "Node",                               
    "esModuleInterop": true,                            
